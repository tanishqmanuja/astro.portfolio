---
import "../styles/global.css";

import { join } from "node:path";

import type { ComponentProps } from "astro/types";
import { GOOGLE_SITE_VERIFICATION_TOKEN } from "astro:env/client";
import { AstroFont } from "astro-font";

import { AUTHOR, DESCRIPTION, TITLE } from "@/site.config";
import EmojiFavicon from "@/components/EmojiFavicon.astro";
import GoogleSiteVerification from "@/components/GoogleSiteVerification.astro";

interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const {
  title = TITLE,
  description = DESCRIPTION,
  class: className,
} = Astro.props;

const FONTS_DIR = "public/fonts";
const fontConfig = [
  {
    name: "Nothing",
    src: [
      {
        style: "normal",
        path: join(process.cwd(), FONTS_DIR, "ndot57.otf"),
      },
    ],
    preload: true,
    display: "swap",
    fallback: "monospace",
  },
] satisfies ComponentProps<typeof AstroFont>["config"];

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;
const ogImageUrl = new URL("og.png", Astro.url.origin).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <meta name="title" content=`${title}` />
    <title>{title}</title>
    <meta name="author" content=`${AUTHOR}` />
    <meta name="description" content=`${description}` />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <!-- Twitter -->
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:image" content={ogImageUrl} />
    <meta property="twitter:card" content="summary_large_image" />

    <!-- Others -->
    <EmojiFavicon emoji="🧑🏻‍💻" />
    <AstroFont config={fontConfig} />
    <GoogleSiteVerification token={GOOGLE_SITE_VERIFICATION_TOKEN} />
  </head>
  <body class={className}>
    <slot />
  </body>
</html>
