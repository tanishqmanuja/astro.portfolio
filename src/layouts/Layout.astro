---
import "@/styles/global.css";

import { GOOGLE_SITE_VERIFICATION_TOKEN } from "astro:env/client";
import { ClientRouter } from "astro:transitions";

import EmojiFavicon from "@/components/EmojiFavicon.astro";
import Fonts from "@/components/Fonts.astro";
import GoogleSiteVerification from "@/components/GoogleSiteVerification.astro";
import OpengraphTags from "@/components/seo/OpenGraphTags.astro";
import TwitterTags from "@/components/seo/TwitterTags.astro";
import { AUTHOR, TWITTER_USERNAME } from "@/site.config";

interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const {
  title = `${AUTHOR} | Portfolio`,
  description,
  class: className,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;
const ogImageUrl = new URL("og.png", Astro.url.origin).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- View Transitions -->
    <ClientRouter />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content=`${title}` />
    <meta name="author" content=`${AUTHOR}` />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalUrl} />
    {description ? <meta name="description" content={description} /> : null}

    <!-- Open Graph / Facebook -->
    <OpengraphTags
      title={title}
      description={description}
      image={ogImageUrl}
      imageAlt={`${AUTHOR} | Portfolio`}
      type="website"
      url={canonicalUrl}
    />

    <!-- Twitter -->
    <TwitterTags
      title={title}
      description={description}
      image={ogImageUrl}
      imageAlt={`${AUTHOR} | Portfolio`}
      card="summary_large_image"
      creator={`@${TWITTER_USERNAME}`}
    />

    <!-- Others -->
    <EmojiFavicon emoji="🧑🏻‍💻" />
    <Fonts />
    <GoogleSiteVerification token={GOOGLE_SITE_VERIFICATION_TOKEN} />
  </head>
  <body class={className ?? "base-layout"}>
    <slot />
  </body>
</html>
