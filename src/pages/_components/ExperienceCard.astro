---
interface Props {
  company: string;
  designation?: string;
}

const { company, designation } = Astro.props;
---

<article class="container:inline-size">
  <h4 class="company">{company}</h4>
  {designation && <span class="designation"> &lt; {designation} /&gt;</span>}
</article>

<style>
  article {
    display: flex;
    column-gap: 2ch;
    flex-wrap: wrap;

    @container (width < 35rem) {
      & {
        flex-direction: column;
      }
    }

    .company {
      font-family: var(--ff-pixelated);
      font-size: var(--fs-pixelated-medium);
      line-height: 1.5;
      font-weight: normal;
      white-space: nowrap;
    }

    .designation {
      color: color-mix(in srgb, var(--color-text-secondary), transparent 40%);
    }
  }
</style>
