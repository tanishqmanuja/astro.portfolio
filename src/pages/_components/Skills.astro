---
import Section from "@/components/Section.astro";
import { SKILLS } from "@/site.config";
---

<Section title="Skills">
  <p class="skills">
    {
      SKILLS.map((skill) => (
        <>
          <span>{skill}</span>,
        </>
      ))
    }
    <span>and more</span>...
  </p>
</Section>

<style>
  .skills {
    font-size: var(--fs-fluid-0);
    color: var(--color-text-subdued);

    & > span {
      color: var(--color-text-primary);
    }
  }
</style>
