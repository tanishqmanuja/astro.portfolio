---
import Section from "@/components/Section.astro";
import { SOCIALS } from "@/site.config";
---

<Section title="Socials">
  <ul class="fs-fluid-0">
    <span class="decoration" aria-hidden="true">[</span>
    {
      SOCIALS.map((social, i) => (
        <li>
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            title={social.title}
            class="ff-dotmatrix fs-small"
          >
            {social.name}
          </a>

          {i < SOCIALS.length - 1 && (
            <span
              class="decoration | ff-pixelated fs-pixelated-small"
              aria-hidden="true"
            >
              ,
            </span>
          )}
        </li>
      ))
    }
    <span class="decoration" aria-hidden="true">]</span>
  </ul>
</Section>

<style>
  .decoration {
    color: var(--color-text-subdued);
    user-select: none;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    column-gap: 1.5ch;
    align-items: center;

    & > .decoration {
      font-family: var(--ff-dotmatrix);
      font-size: var(--fs-large);
      font-size-adjust: var(--fs-adjust-dotmatrix);
    }
  }

  li {
    display: flex;
    align-items: center;

    & > .decoration {
      margin-left: 2px;
    }

    & > a {
      text-decoration: none;
      text-transform: uppercase;

      &:is(:hover, :active, :focus-within) {
        color: var(--color-text-highlight);
        text-underline-offset: 2px;
        text-decoration: underline;
      }
    }
  }
</style>
