---
import Section from "@/components/Section.astro";
import { SOCIALS } from "@/site.config";
---

<Section title="Socials">
  <ul>
    <span class="decoration" aria-hidden="true">[</span>
    {
      SOCIALS.map((social, i) => (
        <li>
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            title={social.title}
          >
            {social.name}
          </a>

          {i < SOCIALS.length - 1 && (
            <span class="decoration" aria-hidden="true">
              ,
            </span>
          )}
        </li>
      ))
    }
    <span class="decoration" aria-hidden="true">]</span>
  </ul>
</Section>

<style>
  .decoration {
    color: var(--color-text-subdued);
    user-select: none;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    column-gap: 1.5ch;
    align-items: center;
    font-size: var(--fs-fluid-0);

    & > .decoration {
      font-family: var(--ff-dotmatrix);
      font-size: var(--fs-large);
    }
  }

  li {
    display: flex;
    align-items: center;

    & > .decoration {
      font-family: var(--ff-pixelated);
      margin-left: 2px;
    }

    & > a {
      font-family: var(--ff-dotmatrix);
      font-size: var(--fs-small);
      text-decoration: none;
      text-transform: uppercase;

      &:is(:hover, :active, :focus-within) {
        color: var(--color-text-highlight);
        text-underline-offset: 2px;
        text-decoration: underline;
      }
    }
  }
</style>
