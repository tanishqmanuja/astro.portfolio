---
import { getCollection, render } from "astro:content";

import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import ProjectComments from "@/components/ProjectComments.astro";
import Layout from "@/layouts/Layout.astro";
import { AUTHOR } from "@/site.config";
import { slugify } from "@/utils/slug";
import ProjectInfoLine from "./_components/ProjectInfoLine.astro";
import ProjectStack from "./_components/ProjectStack.astro";
import ProjectTags from "./_components/ProjectTags.astro";

export async function getStaticPaths() {
  const projects = await getCollection("project");
  return projects.map((project, index, projects) => ({
    params: { slug: slugify(project.slug) },
    props: {
      project,
      url: {
        prev: index === 0 ? undefined : `/${slugify(projects[index - 1].slug)}`,
        next:
          index === projects.length - 1
            ? undefined
            : `/${slugify(projects[index + 1].slug)}`,
      },
    },
  }));
}

const { project, url } = Astro.props;
const { Content } = await render(project);

const title = `${project.data.title} | ${AUTHOR}`;
const description = project.data.description;
---

<Layout title={title} description={description}>
  <Header>{project.data.title}</Header>
  <main>
    <ProjectInfoLine project={project} />
    <ProjectStack stack={project.data.stack} />

    <section class="content | fs-fluid-0">
      <Content />
    </section>
  </main>
  <Footer border="thin">
    <ProjectTags class="tags" tags={project.data.tags} />
    <nav class="ff-pixelated fs-small">
      <a class="primary-selectable" href={url.prev} aria-disabled={!url.prev}>
        {`<`} Prev
      </a>
      <a class="primary-selectable" href="/projects/1/">All Projects</a>
      <a class="primary-selectable" href={url.next} aria-disabled={!url.next}>
        Next {`>`}
      </a>
    </nav>
    <ProjectComments class="comments" />
  </Footer>
</Layout>

<style>
  main {
    padding-bottom: 1rem;
  }

  .content {
    margin-block: 1rem;

    * + * {
      margin-block-start: 1rem;
    }
  }

  .tags {
    margin-block: 3rem 1rem;
  }

  .comments {
    margin-block: 2rem;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-block: 2rem 1rem;
    gap: 1.25rem;

    padding-block: 0.425rem;
    border-block: 1px dashed var(--color-text-subdued);

    a {
      text-transform: uppercase;
      padding: 0.25rem 0.575rem;
      border-radius: 8px;

      &[aria-disabled="true"] {
        cursor: not-allowed;
        color: var(--color-text-subdued);
      }
    }
  }
</style>
