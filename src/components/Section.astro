---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section>
  <h3>{title}</h3>
  <slot />
</section>

<style style="scss">
  section {
    & > h3 {
      margin-bottom: var(--size-2);

      font-size: var(--font-size-0);
      font-family: var(--ff-nothing);
      letter-spacing: 2px;
      text-transform: uppercase;

      &::before {
        content: "//";
        color: var(--clr-orange);
        padding-right: 1ch;
        letter-spacing: normal;
      }
    }
  }
</style>
