{
  "editor.formatOnSave": true,

  /* Astro */
  "prettier.documentSelectors": ["**/*.astro"],
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* CSS Variables */
  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/open-props/open-props.min.css"
  ],

  /* PostCSS */
  "emmet.includeLanguages": {
    "postcss": "css"
  }
}
